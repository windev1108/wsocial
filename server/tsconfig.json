{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@/*": ["./src/*"]
  }
  },
  "include": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  },
}